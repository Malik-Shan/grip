---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SubCard from '../../components/SubCard.astro';
import {formatTests} from '../../Javascript/util';
const tests = await Astro.glob('./content/*.md');
const PhysicsTests = formatTests(tests ,{
    filterOutDraft: true,
    sortByDate: true,
    limit: undefined,
});
---
<BaseLayout page_title="Physics">
    <section class="ps">
        <div class="container">
            <h2 class="section_title s ">Physics Papers</h2>
            <!-- Posts Here  -->
            <div class="posts sub_page">

                {PhysicsTests.map((test) =>
                        <SubCard frontmatter={test.frontmatter} url={test.url} />
                    )}

            </div>

        </div>
    </section>
</BaseLayout>